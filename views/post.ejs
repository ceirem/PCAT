<%- include('partials/_header') -%>

<body>

  <%- include('partials/_navigation') -%>

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('img/post-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="post-heading">
            <h1>Your Post</h1>
          </div>
        </div>
      </div>
    </div>
  </header>
  

  <!-- Post Content -->

    <div class="container">
      <div class="row card center">
        <img src=" <%= photo.image %>" class="img-fluid" alt="...">
      </div>
      <div class="row card text-center">
        <div class="row">
          <div class="col-md-8">
            <h5 class="card-title"> <%= photo.title %></h6>
              <p class="card-text"> <%= photo.description %> </p>
          </div>
          <div class="col-md-4 ms-auto">
            <a href= "/photos/edit/<%= photo._id %> " class="btn btn-secondary rounded-pill">UPDATE</a>
            <a type="button" class="btn btn-danger rounded-pill">DELETE</a>

          </div>
        </div>
      </div>
    </div>

  <%- include('partials/_footer') -%>

  <!-- Custom scripts for this template -->
  <script src="js/clean-blog.min.js"></script>

</body>

</html>
