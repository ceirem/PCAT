<%- include('partials/_header') -%>

<body>

  <%- include('partials/_navigation') -%>

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('img/home-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="site-heading">
            <h1>Clean Blog</h1>
            <span class="subheading">A Blog Theme by Start Bootstrap</span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <div class="container">
    <div class="column">
      <div class="col-lg-8 col-md-10 mx-auto">
       
        <% for (let i = 0 ; i < photos.length ; i++) { %>

        <div class="card" style="column: 18rem;">
          <img src="<%= photos[i].image %>" class="card-img-top" alt="...">
          <div class="card-body">
            <h5 class="card-title"> <%= photos[i].title %> </h5>
            <p class="card-text"> <%= photos[i].description %></p>
            <a href="/photos/<%= photos[i]._id %>" class="btn btn-primary"> See the post</a>
          </div>
        </div>
        
        <br>

        <% } %>

        <!-- Pager -->
        <div>
          <div>
            <% if (pages > 0) { %>
              <ul class="nav tm-paging-links">
                <% for (i=1; i <=pages; i++) { %>
                  <%   if (i == current) { %>
                    <li class="nav-item active"><a href="/?page=<%= i %>" class="nav-link tm-paging-link"><%= i %></a></li>
                  <% } else if (i < pages) { %>
                    <li class="nav-item"><a href="/?page=<%= i %>" class="nav-link tm-paging-link"><%= i %></a></li>
                  <%  } else { %>
                    <li class="nav-item"><a href="/?page=<%= i %>" class="nav-link tm-paging-link">></a></li>
                  <%  } %>
                <%  } %>
              </ul>
            <% } %>
           </div>
        </div>
      </div>
    </div>
  </div>

  <hr>

  <!-- Footer -->
  <%- include('partials/_footer') -%>

  <!-- Custom scripts for this template -->
  <script src="js/clean-blog.min.js"></script>

</body>

</html>
